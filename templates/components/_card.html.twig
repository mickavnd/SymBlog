<div class="flex justify-center my-8 mr-4">

	<div class="rounded-lg shadow-lg bg-white max-w-sm">
		<a href="">
			{% if posts.thumbnail %}

				<img src="{{ vich_uploader_asset(posts.thumbnail,'imageFile')}}" alt="{{posts.thumbnail.imageName}}">

			{% endif %}

			<img class="rounded-t-lg" src="https://mdbootstrap.com/img/new/standard/nature/184.jpg" alt=""/>
		</a>
		<div class="flex space-x-2 justify-center" >
		{% include "components/_badges.html.twig" with {badges: 
		posts.categories} only %}
		</div>
		<div class="p-6">
			<h5 class="text-gray-900 text-xl font-medium mb-2">{{posts.title}}</h5>
			<p class="text-gray-700 text-base mb-4">
				{{posts.content|u.truncate(160,'...')}}
			</p>

			<div class="flex space-x-2 justify-center">
				<button type="button" class="inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out"><a href="{{ path('post_show', {slug: posts.slug}) }}">boutton</a></button>
			</div>

		</div>
	</div>
	
</div>
