{% extends "base.html.twig" %}


{% block title %}
	{{post.title}}
{% endblock %}

{% block body %}

	<div class="containter mx-auto">

		<h1>{{post.title|capitalize}}</h1>

		<h2>publier le
			{{ post.createdAt|date('d/m/Y')}}</h2>


		{% if post.thumbnail %}

			<img src="{{ vich_uploader_asset(post.thumbnail,'imageFile')}}" alt="{{post.thumbnail.imageName}}">

		{% endif %}

		<div>
			{{post.content|raw}}
			<p>dernier mis a jour le
				{{post.updateAt|date('d/m/Y')}}</p>
		</div>


	</div>


{% endblock %}

